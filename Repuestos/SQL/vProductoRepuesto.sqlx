Select 
	al1.idProductoRepuesto,
	al1.idProducto,
	al1.idRepuesto,
	al2.codigo,
	al2.repuesto,
	al3.categoria,
	al3.tipo,
	al2.imagen,
	al1.idSeccion
FROM 
	elx_rep_productoRepuesto al1,
	elx_rep_repuesto al2,
	elx_core_categoria al3
WHERE
	al1.idRepuesto = al2.idRepuesto and
	al2.idCategoria = al3.idCategoria 

